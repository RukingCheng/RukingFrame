<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10px"
    android:paddingRight="10px"
    tools:ignore="PxUsage,ContentDescription,RtlHardcoded,HardcodedText">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10px"
        android:gravity="center"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/time_start_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rk_choice_item_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_start"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#bec8d9"
                android:textSize="28px"
                tools:text="2018-4-12"/>

            <View
                android:id="@+id/time_star_x"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#bec8d9"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:gravity="center"
            android:singleLine="true"
            android:text="至"
            android:textColor="#bec8d9"
            android:textSize="28px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/time_end_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rk_choice_item_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_end"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#bec8d9"
                android:textSize="28px"
                tools:text="2018-4-12"/>

            <View
                android:id="@+id/time_end_x"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#bec8d9"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/img_d"
            android:layout_width="120px"
            android:layout_height="68px"
            android:background="@drawable/rk_choice_item_bg"
            android:gravity="center"
            android:text="删除"
            android:textColor="#bec8d9"
            android:textSize="24px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/wheel_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10px"
            android:paddingRight="10px">

            <com.ruking.frame.library.view.galleryWidget.WheelView
                android:id="@+id/wheel_y"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:layout_gravity="center"
                android:background="#0000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:layout_marginTop="90px"
                android:background="#999"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:layout_marginTop="150px"
                android:background="#999"/>
        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10px"
            android:paddingRight="10px">

            <com.ruking.frame.library.view.galleryWidget.WheelView
                android:id="@+id/wheel_h"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:layout_gravity="center"
                android:background="#0000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:layout_marginTop="90px"
                android:background="#999"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:layout_marginTop="150px"
                android:background="#999"/>
        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="10px"
            android:paddingRight="10px">

            <com.ruking.frame.library.view.galleryWidget.WheelView
                android:id="@+id/wheel_d"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:layout_gravity="center"
                android:background="#0000"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:layout_marginTop="90px"
                android:background="#999"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:layout_marginTop="150px"
                android:background="#999"/>
        </com.zhy.autolayout.AutoFrameLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
