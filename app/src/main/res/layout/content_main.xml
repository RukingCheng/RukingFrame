<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fff"
              android:gravity="center"
              android:orientation="vertical"
              tools:context="com.ruking.frame.sdk_demo.MainActivity"
              tools:ignore="HardcodedText,PxUsage"
              tools:showIn="@layout/app_bar_main">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <com.ruking.frame.library.view.animation.RKElasticScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginTop="20px"
                android:background="#000"
                android:contentDescription="@+id/imageView2"
                app:srcCompat="@drawable/test"/>


            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/elasticScrollActivity"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_margin="20px"
                android:background="#abc"
                android:text="框架自定义AnimationView集合"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30px"
                app:round_corner="20px"
                app:stroke_color="#cba"
                app:stroke_width="2px"/>

            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/dialogactivity"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#abc"
                android:text="对话框框架"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30px"
                app:round_corner="20px"
                app:stroke_color="#cba"
                app:stroke_width="2px"/>

            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/CategoryActivity"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#abc"
                android:text="时间选择器"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30px"
                app:round_corner="20px"
                app:stroke_color="#cba"
                app:stroke_width="2px"/>

            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/listView"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#abc"
                android:text="下拉刷新RecycleView"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30px"
                app:round_corner="20px"
                app:stroke_color="#cba"
                app:stroke_width="2px"/>

            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/LEFT"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#abc"
                android:text="图片选择"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30px"
                app:round_corner="20px"
                app:stroke_color="#cba"
                app:stroke_width="2px"/>

            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/RIGHT"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#abc"
                android:text="RIGHT"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30px"
                app:round_corner="20px"
                app:stroke_color="#cba"
                app:stroke_width="2px"/>

            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/TOP"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#abc"
                android:text="ShadowActivity"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30px"
                app:round_corner="20px"
                app:stroke_color="#cba"
                app:stroke_width="2px"/>

            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/BOTTOM"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#abc"
                android:text="BOTTOM"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30px"
                app:round_corner="20px"
                app:stroke_color="#cba"
                app:stroke_width="2px"/>

            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/SCALE"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#abc"
                android:text="SCALE"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30px"
                app:round_corner="20px"
                app:stroke_color="#cba"
                app:stroke_width="2px"/>

            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/FADE"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="#abc"
                android:text="FADE"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="30px"
                app:round_corner="20px"
                app:stroke_color="#cba"
                app:stroke_width="2px"/>


        </LinearLayout>
    </com.ruking.frame.library.view.animation.RKElasticScrollView>
</LinearLayout>
