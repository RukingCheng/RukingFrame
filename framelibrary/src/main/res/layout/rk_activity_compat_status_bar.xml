<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlHardcoded">

    <View
        android:id="@+id/view_status_bar_place"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <FrameLayout
        android:id="@+id/frame_layout_content_place"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/frame_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333"
        android:orientation="vertical"
        tools:ignore="PxUsage">

        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/frame_tag_tip_layout"
            android:layout_width="match_parent"
            android:layout_height="100px">

            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/frame_tag_but01"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="44px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24px"
                android:background="#0000"
                android:minWidth="0px"
                android:paddingLeft="24px"
                android:paddingRight="24px"
                android:text="清空"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="24px"
                app:round_corner="22px"
                app:stroke_color="#FFFFFF"
                app:stroke_width="1px" />

            <com.ruking.frame.library.view.animation.RKAnimationButton
                android:id="@+id/frame_tag_but02"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="44px"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="24px"
                android:background="#0000"
                android:minWidth="0px"
                android:paddingLeft="24px"
                android:paddingRight="24px"
                android:text="复制"
                android:textAllCaps="false"
                android:textColor="#F57341"
                android:textSize="24px"
                app:round_corner="22px"
                app:stroke_color="#FFB69A"
                app:stroke_width="1px" />

        </com.zhy.autolayout.AutoFrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#999" />

        <ScrollView
            android:id="@+id/frame_tag_scroll"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/frame_tag_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="24px"
                    android:textColor="#fff"
                    android:textSize="20px"
                    tools:text="请绑定您本人的银行卡" />
            </com.zhy.autolayout.AutoLinearLayout>
        </ScrollView>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>

